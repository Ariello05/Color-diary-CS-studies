<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ColorEdit">
    <EditText
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout"/>
    <TableLayout
            android:layout_width="409dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:id="@+id/relativeLayout"
    >
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:text="Red"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                    android:textAlignment="center"/>
            <SeekBar
                    android:text="Red"
                    android:layout_width="635dp"
                    android:thumbTint="@color/red"
                    android:layout_height="wrap_content" android:id="@+id/switchRed" android:switchMinWidth="300dp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="379dp"
                android:layout_height="match_parent">
            <TextView
                    android:text="Green"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                    android:textAlignment="center"/>
            <SeekBar
                    android:text="Red"
                    android:layout_width="635dp"
                    android:thumbTint="@color/green"
                    android:layout_height="wrap_content" android:id="@+id/switchGreen" android:switchMinWidth="300dp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Blue"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"
                    android:textAlignment="center"/>
            <SeekBar
                    android:text="Red"
                    android:layout_width="635dp"
                    android:thumbTint="@color/blue"
                    android:layout_height="wrap_content" android:id="@+id/switchBlue" android:switchMinWidth="300dp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_width="376dp"
                    android:layout_height="wrap_content" android:id="@+id/colorArea" android:clickable="false"/>
        </TableRow>
    </TableLayout>
    <Button
            android:text="Apply"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/buttonApply"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="76dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/buttonRemove"/>
    <Button
            android:text="Remove"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/buttonRemove"
            android:layout_marginBottom="76dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonApply" android:layout_marginEnd="17dp"/>
</android.support.constraint.ConstraintLayout>